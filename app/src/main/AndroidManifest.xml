<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.recipemaker3" >

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddMyRecipeActivity"
            android:label="@string/title_activity_add_my_recipe" >
        </activity>
        <activity
            android:name=".LoadingActivity"
            android:label="@string/title_activity_loading"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name=".getRecipeName"
            android:label="@string/title_activity_get_recipe_name"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".showMyMenuActivity"
            android:label="@string/title_activity_show_my_menu"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".AddMeat"
            android:label="@string/title_activity_add_meat" >
        </activity>
        <activity
            android:name=".AddFish"
            android:label="@string/title_activity_add_fish" >
        </activity>
        <activity
            android:name=".AddVegetable"
            android:label="@string/title_activity_add_vegetable" >
        </activity>
        <activity
            android:name=".AddSeasoning"
            android:label="@string/title_activity_add_seasoning" >
        </activity>
    </application>

</manifest>
