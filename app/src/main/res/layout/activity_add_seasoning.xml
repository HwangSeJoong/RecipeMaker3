<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.recipemaker3.AddSeasoning">

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="후추 1/2숟가락"
        android:id="@+id/button7"
        android:background="@drawable/blackpepper"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="고추장 1/2숟가락"
        android:id="@+id/button33"
        android:background="@drawable/gochujang"
        android:layout_below="@+id/button7"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="꿀 1/2숟가락"
        android:id="@+id/button34"
        android:background="@drawable/honey"
        android:layout_below="@+id/button33"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="된장 1/2숟가락"
        android:id="@+id/button35"
        android:background="@drawable/jang"
        android:layout_below="@+id/button34"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="참기름 1/2숟가락"
        android:id="@+id/button36"
        android:background="@drawable/oil"
        android:layout_below="@+id/button35"
        android:layout_alignStart="@+id/button35" />

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="고추가루 1/2숟가락"
        android:id="@+id/button37"
        android:background="@drawable/pepperpowder"
        android:layout_above="@+id/button38"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="소금 1/2숟가락"
        android:id="@+id/button38"
        android:background="@drawable/salt"
        android:layout_above="@+id/button34"
        android:layout_alignStart="@+id/button37" />

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="간장 1/2숟가락"
        android:id="@+id/button39"
        android:layout_above="@+id/button35"
        android:layout_alignStart="@+id/button37"
        android:background="@drawable/soysauce" />

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="설탕 1/2숟가락"
        android:id="@+id/button40"
        android:background="@drawable/sugar"
        android:layout_above="@+id/button36"
        android:layout_alignStart="@+id/button38" />

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="식초 1/2숟가락"
        android:id="@+id/button41"
        android:background="@drawable/vinegar"
        android:layout_alignBottom="@+id/button36"
        android:layout_alignStart="@+id/button40" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="조미료  완료"
        android:id="@+id/button42"
        android:layout_alignBottom="@+id/button39"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
